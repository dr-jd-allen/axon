# AXON Backend Environment Variables
# Copy this file to .env and fill in your API keys

# Server Configuration
PORT=3001
NODE_ENV=production

# API Keys (Store your actual keys in .env, not in this example file)
# OpenAI API Key for GPT models
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google API Key for Gemini models
GOOGLE_API_KEY=your-google-api-key-here

# Default API Keys for different agent types (optional)
# If not set, will use the main API keys above
GENERALIST_API_KEY=
RESEARCHER_API_KEY=
CODER_API_KEY=
ANALYST_API_KEY=
TEACHER_API_KEY=

# Rate Limiting Configuration
OPENAI_RATE_LIMIT=500
ANTHROPIC_RATE_LIMIT=1000
GOOGLE_RATE_LIMIT=1000

# Security Configuration
ENABLE_API_KEY_ENCRYPTION=true
API_KEY_ENCRYPTION_SECRET=your-encryption-secret-here

# Database Configuration
DATABASE_PATH=./axon.db

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/axon.log

# Cache Configuration
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Tool Configuration
ENABLE_TOOLS=true
ALLOWED_TOOLS=search,calculate,api_call

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true